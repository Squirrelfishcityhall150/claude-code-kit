{
  "skills": {
    "prisma": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "prisma",
          "Prisma",
          "database",
          "db",
          "table",
          "schema",
          "model",
          "migration",
          "query",
          "ORM",
          "SQL",
          "PostgreSQL",
          "MySQL"
        ],
        "intentPatterns": [
          "(create|add).*?(table|model|schema|database)",
          "(query|fetch|get|find).*?(database|data)",
          "prisma.*(schema|migration|client)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "prisma/schema.prisma",
          "**/repositories/**/*.ts",
          "**/*Repository.ts"
        ],
        "contentPatterns": [
          "from '@prisma/client'",
          "import.*PrismaClient",
          "prisma\\.",
          "@prisma/client"
        ]
      }
    }
  }
}
