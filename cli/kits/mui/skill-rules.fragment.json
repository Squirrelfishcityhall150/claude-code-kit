{
  "skills": {
    "mui": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "MUI",
          "Material-UI",
          "Material UI",
          "sx prop",
          "Box",
          "Grid",
          "Typography",
          "Button",
          "theme",
          "styling"
        ],
        "intentPatterns": [
          "(style|design).*?(component|UI)",
          "MUI.*(component|theme|styling)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "src/**/*.tsx",
          "components/**/*.tsx"
        ],
        "contentPatterns": [
          "from '@mui/material'",
          "import.*@mui",
          "sx={{",
          "useTheme()"
        ]
      }
    }
  }
}
