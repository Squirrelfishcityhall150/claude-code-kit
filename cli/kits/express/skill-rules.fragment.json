{
  "skills": {
    "express": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "express",
          "Express.js",
          "route",
          "routing",
          "router",
          "middleware",
          "endpoint",
          "request",
          "response",
          "req",
          "res"
        ],
        "intentPatterns": [
          "(create|add).*?(route|endpoint|middleware)",
          "express.*?(route|middleware|app)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/routes/**/*.ts",
          "**/api/**/*.ts"
        ],
        "contentPatterns": [
          "from 'express'",
          "import.*express",
          "router\\.",
          "app\\.(get|post|put|delete|patch)"
        ]
      }
    }
  }
}
