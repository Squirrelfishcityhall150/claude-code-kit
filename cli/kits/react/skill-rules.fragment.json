{
  "skills": {
    "react": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "react",
          "React",
          "component",
          "hook",
          "useState",
          "useEffect",
          "useCallback",
          "useMemo",
          "Suspense",
          "lazy loading",
          "JSX",
          "TSX"
        ],
        "intentPatterns": [
          "(create|add|build).*?(component|page|feature)",
          "react.*(hook|component|suspense)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "src/**/*.tsx",
          "src/**/*.jsx",
          "components/**/*.tsx",
          "features/**/*.tsx"
        ],
        "contentPatterns": [
          "from 'react'",
          "import React",
          "React\\.FC",
          "useState|useEffect|useCallback|useMemo"
        ]
      }
    }
  }
}
