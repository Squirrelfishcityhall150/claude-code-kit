{
  "skills": {
    "tanstack-query": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "TanStack Query",
          "React Query",
          "useSuspenseQuery",
          "useQuery",
          "data fetching",
          "fetch data",
          "API call",
          "mutation",
          "cache"
        ],
        "intentPatterns": [
          "(fetch|get|load).*?(data|API)",
          "(create|use).*(query|mutation)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "src/**/*.tsx",
          "**/api/**/*.ts"
        ],
        "contentPatterns": [
          "from '@tanstack/react-query'",
          "useSuspenseQuery|useQuery|useMutation",
          "queryKey:",
          "queryFn:"
        ]
      }
    }
  }
}
