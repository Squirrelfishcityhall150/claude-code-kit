{
  "tanstack-query": {
    "intent_patterns": [
      "fetch.*data",
      "query.*data",
      "create.*mutation",
      "invalidate.*cache",
      "prefetch.*data",
      "use.*suspense.*query",
      "implement.*data.*fetching"
    ],
    "keyword_patterns": [
      "tanstack query",
      "react query",
      "useQuery",
      "useMutation",
      "useSuspenseQuery",
      "useQueryClient",
      "queryKey",
      "queryFn",
      "@tanstack/react-query"
    ],
    "content_patterns": [
      "useQuery\\(",
      "useMutation\\(",
      "useSuspenseQuery\\(",
      "queryClient\\.",
      "import.*@tanstack/react-query"
    ],
    "file_path_patterns": [
      "**/api/**/*.ts",
      "**/queries/**/*.ts",
      "**/hooks/**/*.ts"
    ]
  }
}
