{
  "skills": {
    "nodejs": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "backend",
          "backend development",
          "API",
          "server",
          "Node.js",
          "nodejs",
          "async",
          "await",
          "microservice",
          "layered architecture",
          "controller",
          "service",
          "repository",
          "error handling",
          "configuration",
          "testing backend"
        ],
        "intentPatterns": [
          "(create|add|implement).*?(backend|API|service|controller)",
          "(how to|best practice).*?(backend|API|async|error)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "backend/**/*.ts",
          "api/**/*.ts",
          "server/**/*.ts",
          "services/**/*.ts"
        ],
        "contentPatterns": [
          "async.*function",
          "export.*Controller",
          "export.*Service",
          "export.*Repository"
        ]
      }
    }
  }
}
