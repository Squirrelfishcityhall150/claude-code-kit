{
  "name": "react-mui",
  "version": "1.0.0",
  "displayName": "React + Material-UI Plugin",
  "description": "Claude Code skills and agents for React 18+ with Material-UI v7, including modern patterns like Suspense, lazy loading, useSuspenseQuery, TanStack Query/Router, and MUI v7 styling",
  "author": "Claude Code Infrastructure Team",
  "homepage": "https://github.com/your-org/claude-code-infrastructure-showcase",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-code-infrastructure-showcase"
  },
  "keywords": ["react", "mui", "material-ui", "frontend", "typescript", "tanstack-query", "tanstack-router"],
  "compatibility": {
    "claudeCode": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "provides": {
    "skills": ["frontend-dev-guidelines"],
    "agents": ["frontend-error-fixer.md"],
    "commands": [],
    "hooks": [],
    "skillRulesFragment": "skills/skill-rules.fragment.json"
  },
  "dependencies": {
    "npm": {
      "react": "^18.0.0",
      "@mui/material": "^7.0.0",
      "@tanstack/react-query": "^5.0.0",
      "@tanstack/react-router": "^1.0.0"
    }
  },
  "pathPatterns": {
    "frontend": [
      "{{FRONTEND_DIR}}/**/*.tsx",
      "{{FRONTEND_DIR}}/**/*.ts",
      "src/**/*.tsx",
      "client/**/*.tsx",
      "web/**/*.tsx",
      "app/**/*.tsx"
    ]
  },
  "contentPatterns": {
    "react": [
      "from 'react'",
      "import React",
      "export default function",
      "React\\.FC<"
    ],
    "mui": [
      "from '@mui/material'",
      "<Grid ",
      "sx={{",
      "useTheme()"
    ]
  },
  "templates": {
    "paths": {
      "FRONTEND_DIR": "src",
      "COMPONENTS_DIR": "src/components",
      "FEATURES_DIR": "src/features"
    }
  }
}
