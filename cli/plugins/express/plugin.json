{
  "name": "express",
  "version": "1.0.0",
  "displayName": "Express.js Backend Plugin",
  "description": "Claude Code skills and agents for Express.js backend development with TypeScript, including layered architecture patterns (Routes → Controllers → Services → Repositories), Prisma ORM, Sentry error tracking, and Zod validation",
  "author": "Claude Code Infrastructure Team",
  "homepage": "https://github.com/your-org/claude-code-infrastructure-showcase",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-code-infrastructure-showcase"
  },
  "keywords": ["express", "backend", "api", "typescript", "prisma", "sentry", "nodejs", "rest-api"],
  "compatibility": {
    "claudeCode": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "provides": {
    "skills": ["backend-dev-guidelines"],
    "agents": ["auth-route-tester.md", "auth-route-debugger.md"],
    "commands": [],
    "hooks": [],
    "skillRulesFragment": "skills/skill-rules.fragment.json"
  },
  "dependencies": {
    "npm": {
      "express": "^4.18.0",
      "typescript": "^5.0.0",
      "@prisma/client": "^5.0.0",
      "@sentry/node": "^7.0.0",
      "zod": "^3.22.0"
    }
  },
  "pathPatterns": {
    "backend": [
      "{{BACKEND_DIR}}/**/*.ts",
      "{{API_DIR}}/**/*.ts",
      "{{SERVICES_DIR}}/**/*.ts",
      "api/**/*.ts",
      "backend/**/*.ts",
      "server/**/*.ts",
      "services/**/*.ts"
    ]
  },
  "contentPatterns": {
    "express": [
      "from 'express'",
      "import.*express",
      "router\\.",
      "app\\.(get|post|put|delete|patch)"
    ],
    "architecture": [
      "export.*Controller",
      "export.*Service",
      "export.*Repository",
      "extends BaseController"
    ]
  },
  "templates": {
    "paths": {
      "BACKEND_DIR": "src",
      "API_DIR": "src/api",
      "SERVICES_DIR": "src/services"
    }
  }
}
